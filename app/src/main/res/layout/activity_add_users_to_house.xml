<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/bgColor"
    tools:context="com.manado.AddUsersToHouseActivity">

    <EditText
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="zoek voor users"
        android:background="@color/general_white_edit_text"
        android:paddingLeft="@dimen/general_edit_text_left_padding"
        android:paddingTop="@dimen/general_edit_text_top_padding"
        android:paddingBottom="@dimen/general_edit_text_bot_padding"
        android:layout_marginBottom="0dp"
        android:id="@+id/search_users_edit_text"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true" />

    <android.support.v7.widget.RecyclerView
        android:layout_weight="5"
        android:id="@+id/searchUserRecyclerView"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="50dp"

        android:layout_centerHorizontal="true"
        android:layout_below="@+id/search_users_edit_text"
        android:layout_above="@+id/button2" />

</LinearLayout>
